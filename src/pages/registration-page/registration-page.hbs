{{#> Dialog }}
  <form class="registration-page" ref="form">
    <div class="registration-page__content">
      {{{ PageTitle title="Регистрация" }}}
      {{{ InputField className="registration-page__input" title="Почта" name="email"
        ref="email" validate=validateEmail }}}
      {{{ InputField className="registration-page__input" title="Логин" name="login"
        ref="login" validate=validateLogin }}}
      {{{ InputField className="registration-page__input" title="Имя" name="first_name"
        ref="name" validate=validateName }}}
      {{{ InputField className="registration-page__input" title="Фамилия" name="second_name"
        ref="surname" validate=validateSurname }}}
      {{{ InputField className="registration-page__input" title="Телефон" name="phone"
        ref="phone" validate=validatePhone }}}
      {{{ InputField className="registration-page__input" title="Пароль" type="password" name="password"
        ref="password" validate=validatePassword }}}
      {{{ InputField className="registration-page__input" title="Пароль (ещё раз)" type="password" name="password_copy"
        ref="passwordCopy" validate=validatePasswordCopy }}}
    </div>
    <div class="registration-page__footer">
      {{{ Button text="Зарегистрироваться" page="chat" }}}
      {{{ Link text="Войти" page="login" onClick=navigateToLogin }}}
    </div>
  </form>
{{/ Dialog }}
