{{#> Dialog }}
  <form class="login-page" ref="form">
    <div class="login-page__content">
      {{{ PageTitle title="Вход" }}}
      {{{ InputField className="login-page__input" title="Логин" name="login" ref="login" validate=validateLogin }}}
      {{{
        InputField className="login-page__input" title="Пароль" name="password" type="password" ref="password"
        validate=validatePassword
      }}}
    </div>
    <div class="login-page__footer">
      {{{ Button text="Авторизоваться" page="chat" }}}
      {{{ Link text="Нет аккаунта?" page="registration" onClick=navigateToRegistration }}}
    </div>
  </form>
{{/ Dialog }}
