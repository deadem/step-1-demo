<div class="chat-header{{#if className}} {{ className }}{{/if}}">
  <div class="chat-header__avatar"></div>
  <div class="chat-header__name">{{ name }}</div>
  <div class="chat-header__menu-button" ref="button">&vellip;</div>
  {{#if menu}}
    {{{ Menu className="chat-header__menu" menu=menu onClick=onClickMenu }}}
  {{/if}}
  {{#if useradd}}
    {{{ DialogInput onSubmit=onUserAdd title="Добавить пользователя" inputTitle="Логин" actionText="Добавить" }}}
  {{/if}}
</div>
