{
  "name": "middle-frontend-chat",
  "version": "1.0.0",
  "description": "Middle-Frontend Chat",
  "license": "ISC",
  "engines": {
    "node": ">=12"
  },
  "workspaces": [
    "packages/*"
  ],
  "targets": {
    "default": {
      "includeNodeModules": true
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "parcel src/index.html --port 3000 --no-cache",
    "build": "rimraf ./dist/* && parcel build src/index.html --no-cache",
    "start": "node ./server.js",
    "stylelint": "stylelint \"src/**/*.scss\"",
    "eslint": "eslint \"src/**/*.[jt]s\"",
    "lint": "npm run stylelint && npm run eslint"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.8.0",
    "@parcel/validator-eslint": "^2.8.2",
    "@parcel/validator-typescript": "^2.8.2",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "handlebars": "^4.7.7",
    "parcel": "^2.8.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.16.1",
    "stylelint-config-standard-scss": "^6.1.0"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
